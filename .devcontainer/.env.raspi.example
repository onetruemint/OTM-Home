# Backend Server Configuration for Raspberry Pi Deployment
# Copy this file to .env.raspi and update with your backend server's IP/hostname

# Backend server IP address or hostname (where MongoDB and Kafka are running)
# Example: 192.168.1.100 or backend-server.local
BACKEND_SERVER_IP=192.168.1.100

# MongoDB connection URL
BACKEND_MONGO_URL=mongodb://otm-home-user:otm-home-password@192.168.1.100:27017

# Kafka broker addresses
# Default: BACKEND_SERVER_IP:9092
BACKEND_KAFKA_BROKERS=192.168.1.100:9092

# Docker Platform
# Set this based on your Raspberry Pi model:
# - Raspberry Pi 3/4/5 (64-bit OS): linux/arm64
# - Raspberry Pi 3/4 (32-bit OS): linux/arm/v7
# - Testing on x86_64: linux/amd64
DOCKER_PLATFORM=linux/arm64

# Mongo Express Configuration
MONGO_EXPRESS_IMAGE=mongo-express:latest
MONGO_EXPRESS_USER=mint
MONGO_EXPRESS_PASSWORD=pass
