{
  "extends": "./node_modules/gts/tsconfig-google.json",
  "compilerOptions": {
    "target": "ES2022",
    "module": "CommonJS",
    "outDir": "./dist",
    "rootDir": "./",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "paths": {
      "@platform/*": ["./otm.platform/*"],
      "@apps/*": ["./apps/*"]
    }
  },
  "include": ["otm.platform/**/*", "apps/**/*"],
  "exclude": ["node_modules", "dist"]
}
